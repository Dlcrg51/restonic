<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
    <name>tmpl_restonic2</name>
    <version>1.0</version>
    <creationDate>8/23/2013</creationDate>
    <author>Chad Windnagle - Cohesive Websites</author>
    <authorEmail>chad@cohesivewebsites.com</authorEmail>
    <copyright>Copyright (C) 2005 - 2013 Servant Holdings, LLC</copyright>
    <description>Custom Bootstrap Responsive Restonic template</description>
    <files>
        <filename>templateDetails.xml</filename>
        <folder>css</folder>
        <folder>images</folder>
        <folder>less</folder>
    </files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
						name="logo"
						type="list"
						default="light"
						label="Logo type"
						description="Selec the logo to be used, light or dark">
					<option value="light">Light Logo</option>
					<option value="dark">Dark Logo</option>
				</field>
                <field
                        name="background"
                        type="list"
                        description="show background image">
                    <option value="1">yes</option>
                    <option value="0">no</option>
                </field>
                <field
                        name="sidebar_position"
                        type="list"
                        description="Align the sidebar left or right"
                        default="left"
                    >
                    <option value="left">Left</option>
                    <option value="right">Right</option>
                </field>
			</fieldset>
		</fields>
	</config>
    <positions>
        <position>logo</position>
        <position>left</position>
        <position>search</position>
        <position>social</position>
        <position>anniversary</position>
        <position>top-menu</position>
        <position>breadcrumbs</position>
    </positions>
</extension>